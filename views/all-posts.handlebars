<div class="post-container">
  {{#each posts as | post | }}
  <div class="card">
      <div class="card-header">
        <h2><a href="/post/{{id}}" class="card-link">{{post.title}}</a></h2>
      </div>
      <div class="card-body">
        <p>
          {{post.post_body}}
        </p>
        <p class="card-text">Posted by {{user.username}} on {{format_date created_at}}</p>
      </div>
  </div>
  {{/each}}
</div>